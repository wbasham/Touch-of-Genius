<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </TableRow>

    <TableRow>
        <ImageButton
        	android:id="@+id/imageButton1"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/announcements_icon" />        
        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/reminders_icon" />
	</TableRow>	
	
    <TableRow>    
        <TextView
            android:text="Announcements" 
            android:gravity="center"/>
        <TextView
            android:text="Reminders" 
            android:gravity="center"/>
    </TableRow> 

    <TableRow>
        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gold_stars_icon" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/events_icon" />
    </TableRow>

    <TableRow>    
        <TextView
            android:text="Gold Stars" 
            android:gravity="center"/>
        <TextView
            android:text="Events" 
            android:gravity="center"/>
    </TableRow>
    
    <TableRow>
        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chalkboard_icon" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/photos_icon" />
    </TableRow>

    <TableRow>    
        <TextView
            android:text="Gold Stars" 
            android:gravity="center"/>
        <TextView
            android:text="Events" 
            android:gravity="center"/>
    </TableRow>
</TableLayout>
